{
  "manifest_version": 3,
  "name": "Clocky",
  "version": "1.0",
  "externally_connectable": {
    "ids": [
    ],
    "matches": [
      "https://*.google.com/*",
      "*://*.chromium.org/*",
      "http://localhost:8080/*"
    ],
    "accepts_tls_channel_id": false
  },
  "background": {
    "service_worker":"background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "windows",
    "scripting"

    
  ],

  "host_permissions":[
    "<all_urls>"
  ],



  "action":{
    "default_icon":{
        "16": "icon-16.png",
        "32":"icon-32.png"},
    "default_title":"Clocky"
    }



}