{
  "manifest_version": 3,
  "name": "Clocky",
  "version": "1.0",
  "background": {
    "service_worker":"background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"

    
  ],

  "host_permissions":[
    "https://*/*",  
    "http://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["timers.js","sites.js "]
    }
  ],
    

  "action":{
    "default_icon":{
        "16": "icon-16.png",
        "32":"icon-32.png"},
    "default_title":"Clocky"
    }



}